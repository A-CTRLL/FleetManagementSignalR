    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Truck[0].AdditionalProperty1)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Truck[0].AdditionalProperty2)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Truck[0].TruckProperty1)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Truck[0].TruckProperty2)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Truck[0].Make)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Truck[0].Model)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Truck[0].Color)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Truck[0].FuelType)
